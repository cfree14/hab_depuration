@inproceedings{ WOS:000254893200062,
Author = {Ibelings, Bas W. and Havens, Karl E.},
Editor = {Hudnell, HK},
Title = {Cyanobacterial toxins: a qualitative meta-analysis of concentrations,
   dosage and effects in freshwater, estuarine and marine biota},
Booktitle = {CYANOBACTERIAL HARMFUL ALGAL BLOOMS: STATE OF THE SCIENCE AND RESEARCH
   NEEDS},
